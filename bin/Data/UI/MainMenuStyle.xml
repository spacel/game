<elements>
    <element type="BorderImage" >
	<attribute name="Texture" value="Texture2D;Textures/UI.png" />
    </element>
    <element type="AudioImage" >
	<attribute name="Texture" value="Texture2D;Textures/audio_icons.png" />
    </element>
    <element type="Button" style="BorderImage">
	<attribute name="Size" value="400 50" />
	<attribute name="Image Rect" value="16 0 32 16" />
	<attribute name="Border" value="4 4 4 4" />
	<attribute name="Pressed Image Offset" value="16 0" />
	<attribute name="Hover Image Offset" value="0 16" />
	<attribute name="Pressed Child Offset" value="-1 1" />
	<attribute name="Color" value="1 1 0" />
	<attribute name="Horiz Alignment" value="Center" />
    </element>
    <element type="ButtonInLine" style="BorderImage">
	<attribute name="Size" value="150 25" />
	<attribute name="Image Rect" value="16 0 32 16" />
	<attribute name="Border" value="4 4 4 4" />
	<attribute name="Pressed Image Offset" value="16 0" />
	<attribute name="Hover Image Offset" value="0 16" />
	<attribute name="Pressed Child Offset" value="-1 1" />
	<attribute name="Color" value="1 1 0" />
	<attribute name="Horiz Alignment" value="Center" />
    </element>
    <element type="SoundButton" style="AudioImage" auto="false">
	<attribute name="Min Size" value="32 32" />
	<attribute name="Max Size" value="32 32" />
	<attribute name="Image Rect" value="15 95 45 125" />
	<attribute name="Hover Image Offset" value="0 0" />
	<attribute name="Pressed Child Offset" value="0 0" />
	<attribute name="Focus Mode" value="NotFocusable" />
	<attribute name="Horiz Alignment" value="Right" />
	<attribute name="Vert Alignment" value="Bottom" />
    </element>
    <element type="SoundButtonOff" style="AudioImage" auto="false">
	<attribute name="Min Size" value="32 32" />
	<attribute name="Max Size" value="32 32" />
	<attribute name="Image Rect" value="45 95 75 125" />
	<attribute name="Hover Image Offset" value="0 0" />
	<attribute name="Pressed Child Offset" value="0 0" />
	<attribute name="Focus Mode" value="NotFocusable" />
	<attribute name="Horiz Alignment" value="Right" />
	<attribute name="Vert Alignment" value="Bottom" />
    </element>
    <element type="Window" style="BorderImage">
	<attribute name="Size" value="600 400" />
	<attribute name="Image Rect" value="48 0 64 16" />
	<attribute name="Border" value="4 4 4 4" />
	<attribute name="Resize Border" value="8 8 8 8" />
	<attribute name="Horiz Alignment" value="Center" />
	<attribute name="Vert Alignment" value="Center" />
	<attribute name="Opacity" value="0.75" />
    </element>
    <element type="Text">
	<attribute name="Font" value="Font;Fonts/ethnocentric rg.ttf" />
    </element>
    <element type="TextButton" style="Text">
	<attribute name="Font Size" value="20" />
	<attribute name="Color" value="1 1 0.85" />
	<attribute name="Horiz Alignment" value="Center" />
	<attribute name="Vert Alignment" value="Center" />
    </element>
    <element type="TextButtonInLine" style="Text">
	<attribute name="Font Size" value="10" />
	<attribute name="Color" value="1 1 0.85" />
	<attribute name="Horiz Alignment" value="Center" />
	<attribute name="Vert Alignment" value="Center" />
    </element>
    <element type="Title" style="Text">
	<attribute name="Font Size" value="40" />
	<attribute name="Color" value="0.5 0.5 1" />
	<attribute name="Horiz Alignment" value="Center" />
	<attribute name="Vert Alignment" value="Top" />
    </element>
    <element type="LineEdit" style="BorderImage">
	<attribute name="Size" value="250 25" />
	<attribute name="Border" value="4 4 4 4" />
	<attribute name="Image Rect" value="64 0 80 16" />
	<attribute name="Hover Image Offset" value="0 16" />    <!-- Background color of the hover image IS the hover color of LineEdit -->
	<attribute name="Horiz Alignment" value="Center" />
	<element type="Text" internal="true">
	    <attribute name="Color" value="0.9 1 0.9 1" />
	    <attribute name="Selection Color" value="0.3 0.4 0.7 1" />
	    <attribute name="Horiz Alignment" value="Left" />
	    <attribute name="Vert Alignment" value="Center" />
	</element>
	<element type="BorderImage" internal="true">
	    <attribute name="Size" value="4 16" />
	    <attribute name="Priority" value="1" />
	    <attribute name="Image Rect" value="12 0 16 16" />
	</element>
    </element>
    <element type="LineEditLabel" style="Text">
	<attribute name="Font Size" value="10" />
	<attribute name="Color" value="1 1 0.85" />
	<attribute name="Horiz Alignment" value="Left" />
    </element>
    <element type="ErrorBubble" style="BorderImage">
	<attribute name="Size" value="550 30" />
	<attribute name="Image Rect" value="144 16 160 32" />
	<attribute name="Border" value="4 4 4 4" />
	<attribute name="Resize Border" value="8 8 8 8" />
	<attribute name="Horiz Alignment" value="Center" />
	<attribute name="Opacity" value="0.45" />
    </element>
    <element type="ErrorBubbleText" style="Text">
	<attribute name="Color" value="0.9 1 0.9 1" />
	<attribute name="Selection Color" value="0.3 0.4 0.7 1" />
	<attribute name="Horiz Alignment" value="Center" />
	<attribute name="Vert Alignment" value="Center" />
    </element>
    <element type="ListView">  <!-- Shortcut to copy all the styles from ScrollView -->
	<attribute name="Position" value="20 20" />
	<attribute name="Size" value="300 300" />
	<attribute name="Focus Mode" value="NotFocusable" />
	<element type="ScrollBar" internal="true">
	    <attribute name="Size" value="0 16" />
	</element>
	<element type="ScrollBar" internal="true">
	    <attribute name="Size" value="16 0" />
	</element>
	<element type="BorderImage" internal="true">
	    <attribute name="Image Rect" value="48 0 64 16" />
	    <attribute name="Border" value="4 4 4 4" />
	    <attribute name="Hover Image Offset" value="16 16" />
	    <attribute name="Clip Border" value="2 2 2 2" />
	    <element internal="true">
		<attribute name="Layout Mode" value="Vertical" />
	    </element>
	</element>
    </element>
    <element type="ListViewText" style="Text">
	<attribute name="Color" value="0.9 1 0.9 1" />
	<attribute name="Selection Color" value="0.3 0.4 0.7 1" />
    </element>
</elements>
